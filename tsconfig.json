{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  }
}
